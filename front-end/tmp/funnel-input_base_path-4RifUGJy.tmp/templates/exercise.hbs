<div class="rehabPlan">
    <h2>Exercises</h2>
    <div class="row">
        <div class="col-lg-12">
            <table id="example" class="ui celled table" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Frequency</th>
                        <th>Duration</th>
                        <th>Image</th>
                        <th>Edit/Delete</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Frequency</th>
                        <th>Duration</th>
                        <th>Image</th>
                        <th>Edit/Delete</th>
                    </tr>
                </tfoot>
                <tbody>
                    {{#each model as |onePost|}}
                        <tr>
                            <td>{{onePost.name}}</td>
                            <td>{{onePost.description}}</td>
                            <td>{{onePost.frequency}}</td>
                            <td>{{onePost.duration}}</td>
                            <td>
                                <img src="{{onePost.image.imageData}}">
                            </td>
                            <td>
                                {{delete-exercise ID=onePost.id}}{{modify-exercise name=onePost.name description=onePost.description objectives=onePost.objectives actionSteps=onePost.actionSteps frequency=onePost.frequency duration=onePost.duration image=onePost.image  ID=onePost.id}}
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
    {{add-exercise}}
  </div>
</div>
</div>