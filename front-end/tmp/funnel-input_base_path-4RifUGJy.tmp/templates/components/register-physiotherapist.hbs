<div class="ui blue animated button"{{action 'openModal'}}>
    <div class="visible content">Register a Physiotherapist</div>
    <div class="hidden content">
        <i class="plus icon"></i>
    </div>
</div>

{{#ui-modal name="registerPhysiotherapist" class="registerPhysiotherapist"}}
    <div class="header">
        Registering A New Physiotherapist
    </div>
    <div class="scrolling content">
        <div class="ui form">
            <div class="field">
                <label>Email</label>
                {{input type="text" cols="50" rows="1" value=email1 placeholder="Add email"}}
            </div>
            <div class="field">
                <label>Confirm Email</label>
                {{input type="text" cols="50" rows="1" value=email2 placeholder="Confirm email"}}
            </div>
            <div class="field">
                <label>Password</label>
                {{input type="password" cols="50" rows="1" value=password1 placeholder="Add password"}}
            </div>
            <div class="field">
                <label>Confirm Password</label>
                {{input type="password" cols="50" rows="1" value=password2 placeholder="Confirm password"}}
            </div>
            <div class="field">
                <label>User Account Name</label>
                {{textarea value=userAccountName cols="50" rows="1" placeholder="Add user account name"}}
            </div>
            <div class="field">
                <label>First Name</label>
                {{textarea value=givenName cols="50" rows="1" placeholder="Add first name"}}
            </div>
            <div class="field">
                <label>Last Name</label>
                {{textarea value=familyName cols="50" rows="1" placeholder="Add last name"}}
            </div>
            <div class="field">
                <label>
                    Date Hired
                    {{pikaday-input value=date format="MM/DD/YY" yearRange="50" readonly="readonly" onSelection=(action 'selectDate') placeholder="Select Date"}}
                </label>
            </div>
        </div>
    </div>
    <br>

    <div class="actions">
        <div class="ui black deny button">
            Cancel
        </div>
        <div class="ui positive right labeled icon button">
            Save
            <i class="checkmark icon"></i>
        </div>
        <br><br>
    </div>
{{/ui-modal}}