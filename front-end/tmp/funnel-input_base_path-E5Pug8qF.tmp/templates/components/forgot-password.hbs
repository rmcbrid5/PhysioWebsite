<head>
  <link href="https://fonts.googleapis.com/css?family=Krona+One" rel="stylesheet">
</head>
<div class="actions" style="text-align: center">
    <div class="ui blue right labeled icon button" {{action "openModal"}}>
        Forgot Password?
    </div>
    <br><br>
</div>

{{#ui-modal name='changePassword' class='changePassword'}}
    <div class='header'>
        Forgot Password
    </div>
    <div class='scrolling content'>
        <div class='ui form'>
            {{#if sent}}
                <p>
                    Enter the authentication code that was sent to your email.
                </p>
                <div class="field">
                    <label>Authentication Code</label>
                    {{input type="text" cols="50" rows="1" value=authenticationCode placeholder="Enter Authentication Code"}} 
                </div>
            {{else}}
                <p>
                    Enter your user account name, and confirm your new password. A confirmation code 
                    will be sent to your email, which you'll need to enter again here.
                </p>
                <div class="field">
                    <label>User Account Name</label>
                    {{input type="text" cols="50" rows="1" value=userAccountName placeholder="Enter User Account Name"}}
                </div>
                <div class="field">
                    <label>New Password</label>
                    {{input type="password" cols="50" rows="1" value=newPassword placeholder="Enter New Password"}}
                </div>
                <div class="field">
                    <label>Confirm New Password</label>
                    {{input type="password" cols="50" rows="1" value=confirmPassword placeholder="Confirm New Password"}}
                </div>
            {{/if}}
        </div>
    </div>
    <div class="actions">
        <div class="ui black deny button">
            Cancel
        </div>
        <div class="ui positive right labeled icon button">
            Save
            <i class="checkmark icon"></i>
        </div>
        <br><br>
    </div>
{{/ui-modal}}