<div class="container">
    <div class="row">
        <div class="col-lg-12" style="margin: 30px;">
            <table id="example" class="ui celled table" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Assign Rehabilitation Plan</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Assign Rehabilitation Plan</th>
                    </tr>
                </tfoot>
                <tbody>
                    {{#each model as |onePost|}}
                        <tr>
                            <td>{{onePost.givenName}} {{onePost.familyName}}</td>
                            <td>{{onePost.email}}</td>
                            <td>{{assign-plan ID=onePost.id}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
