<div class="ui green right floated animated button" style="min-width: 0px;" {{action 'openModal'}}>
    <div class="visible content"><i class="edit icon"></i></div>
    <div class="hidden content">Edit</div>
</div>

{{#ui-modal name=modalName class=modalName}}
    <div class="header">
        Modifying Question
    </div>
    <div class="scrolling content">
        <div class="ui form">
            <div class="field">
                <label>Modify Question Text</label>
                {{input type="text" cols="50" rows="1" value=questionText}}
            </div>
            <div class="field">
                <label>Modify Help Description</label>
                {{textarea value=helpDescription cols="50" rows="3" }}
            </div>
        </div>
    </div>
<br>

<div class="actions">
    <div class="ui black deny button">
        Cancel
    </div>
    <div class="ui positive right labeled icon button">
        Save
        <i class="checkmark icon"></i>
    </div>
    <br><br>
</div>
{{/ui-modal}}
<br><br>