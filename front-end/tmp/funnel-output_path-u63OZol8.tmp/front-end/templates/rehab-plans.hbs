            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Goal</th>
                <th>Time Frame To Complete</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Goal</th>
                <th>Time Frame To Complete</th>
                <th>Edit/Delete</th>
            </tr>
        </tfoot>
        <tbody>
            {{#each model as |onePost|}}
            <tr>
                <td>{{onePost.name}}</td>
                <td>{{onePost.description}}</td>
                <td>{{onePost.goal}}</td>
                <td>{{onePost.timeFrameToComplete}}</td>
                <td>
                    {{delete-plan ID=onePost.id}}{{modify-plan name=onePost.name description=onePost.description physiotherapist=onePost.physiotherapist timeFrameToComplete=onePost.timeFrameToComplete goal=onePost.goal exercisesLists=onePost.exercisesLists assessmentTests=onePost.assessmentTests exercisesLists=onePost.exercisesLists ID=onePost.id}}
                </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

