<!-- need a css change for this modal position -->
<div class="container">
  <div class="row">
    <div class="col-lg-12" style="margin: 30px;">
      <table id="example" class="ui celled table" width="100%" cellspacing="0">
              <thead>
                  <tr>
                      <th>User Account Name</th>
                      <th>Name</th>
                      <th>Generate PDF Report</th>
                  </tr>
              </thead>
              <tfoot>
                  <tr>
                      <th>User Account Name</th>
                      <th>Name</th>
                      <th>Generate PDF Report</th>
                  </tr>
              </tfoot>
              <tbody>
                  {{#each model as |onePost|}}
                      <tr>
                          <td>{{onePost.userAccount.userAccountName}}</td>
                          <td>{{onePost.givenName}} {{onePost.familyName}}</td>
                          <td>
                            <a {{action "createPDF" onePost.givenNname onePost.familyName
                            onePost.DOB onePost.email onePost.phone onePost.treatments}} href="#">Generate Report</a>
                            <br>
                             {{client-report ID=onePost.id}}
                        </td>
                      </tr>
                  {{/each}}
                </tbody>
            </table>
